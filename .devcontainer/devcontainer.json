// .devcontainer/devcontainer.json
{
    // Nombre del entorno de desarrollo
    "name": "Tema3_PHP_mariadb",

    // Apunta a tu archivo docker-compose.yml y especifica el servicio principal
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",

    // Espacio de trabajo donde se montará tu código fuente
    "workspaceFolder": "/workspace",

    // Mapeo de puertos para el servidor de desarrollo de PHP
    "forwardPorts": [8080],

    // Comando a ejecutar después de que se cree el contenedor
    "postStartCommand": "php -S 0.0.0.0:8080 -t public/",

    // Añade extensiones de VS Code recomendadas para este entorno
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-debug",
                "ms-azuretools.vscode-docker",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-mysql"
            ]
        }
    },

    // Instala Git dentro del contenedor
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}